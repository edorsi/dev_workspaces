{
  "name": "Rust & TS Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  // VS Code extensions removed as they are unnecessary for RustRover.
  // If you ever need to force-install a JetBrains plugin (e.g. a specific theme),
  // you can use this block:
  "customizations": {
    "jetbrains": {
      "backend": "RustRover",
      "plugins": [
      ]
    }
  },

  "postCreateCommand": "npm install -g typescript yarn",
  "forwardPorts": [5432, 16686]
}
